@model ICollection<Job>
@section styles{
    <style>
        #cat:hover {
            transform: scale(1.1);
            transition: transform 0.6s ease-in-out;
        }

        #prio:hover {
            transform: scale(1.1);
            transition: transform 0.6s ease-in-out;
        }
    </style>

}
    <div class="row m-0 d-flex justify-content-between">
        <div class="col-md-6  ">
            <div class=" row" id="cat">
                <h3 class="text-center mx-auto">Tasks per Category</h3>
                @*<p> Here, tasks are registered under these four categories</p>*@
                <canvas id="chart_area" class="mx-auto bg-light mt-2 d-flex" style="max-height:350px; max-width:550px"></canvas>

            </div>
            <br />
            <hr />
            <br />
            <div class="row" id="prio">

                <h3 class="text-center mx-auto">Task Priority Statistics</h3>
                <canvas id="myChart" class="mx-auto bg-light mt-2 d-flex" style="max-height:250px; max-width:550px"></canvas>
            </div>
        </div>

        <div class="col-md-5 border border-right-0 border-top-0 border-bottom-0">
            <div>
                <h3 class="text-center mx-auto text-primary">Upcoming Tasks</h3>
            </div>

            <div class="table-responsive-md table-responsive-lg table-sm  text-center table-hover ">
                <table class="table table-striped mx-auto">
                    <thead>
                        <tr>
                            <th scope="col">SL</th>
                            <th scope="col">Task Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Start Date</th>
                        </tr>

                    </thead>
                    @{
                    var incr = 1;
                }
                @if (Model.Any())
                {
                    @foreach (var c in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@(incr++)</td>
                                <td>@c.Title</td>
                                <td>@c.Category.CategoryName</td>
                                <td>@c.TaskStartDateTime.ToShortDateString()</td>
                                <td>Pending</td>
                               
                            </tr>
                        </tbody>

                    }
                }
                else
                {
                    <tbody>
                        <tr>
                            <td colspan="9" class="text-center"><strong>No Data Found</strong></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>

    </div>
</div>
@section scripts{
    <script src="~/js/chart.js"></script>
    }
